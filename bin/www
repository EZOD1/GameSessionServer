var https = require('https'); 
var app = require('../app');
var fs = require('fs'); 
require("dotenv").config();
const PORT = process.env.PORT;

const options = {
  key: fs.readFileSync("./certificate/privateKey.key.pem"),
  cert: fs.readFileSync("./certificate/certificate.crt.pem")
};

const server = https.createServer(options, app);
server.listen(PORT)

